<%- include('header') %>

<!-- Create Profile -->
<body>
  <main id="container">
    <section>
      <span>1/4</span>
      <img src="static/profiel-aanmaken.jpg" />
      <form action="/select-artists" method="post">
        <h1>Create Profile</h1>

        <p>Welcome at Concert Buddies!</p>
        <p>
          Create your profile and find other people with amazing music taste
        </p>

        <div>
          <label for="name">Username</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Username"
            required
          />
        </div>

        <div>
          <label for="age">Age </label>
          <input type="date" id="age" name="age" required />
        </div>

        <div>
          <label for="phone">Number </label>
          <input
            type="tel"
            id="phone"
            name="tel"
            placeholder="0612345678"
            required
          />
        </div>
        <input type="submit" value="Next" />
      </form>
    </section>
  </main>
</body>
